<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/breed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Abyssinian"
            style="@style/BlackTextStyle" />

        <TextView
            android:id="@+id/breed_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/breed_name"
            tools:text="The Abyssinian is easy to care for, and a joy to have in your home. Theyâ€™re affectionate cats and love both people and other animals." />

        <LinearLayout
            android:id="@+id/social_need_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/breed_description"
            android:orientation="vertical">

            <TextView
                android:id="@+id/social_need_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BlackTextStyle"
                android:text="@string/social_need_text"/>

            <RatingBar
                android:id="@+id/social_need_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="3"
                style="?android:attr/ratingBarStyleIndicator"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/child_friendly_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/social_need_layout"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/child_friendly_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BlackTextStyle"
                android:text="@string/child_friendly_text"/>

            <RatingBar
                android:id="@+id/child_friendly_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="4"
                style="?android:attr/ratingBarStyleIndicator"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/energy_level_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/child_friendly_layout"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/energy_level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BlackTextStyle"
                android:text="@string/energy_level_text"/>

            <RatingBar
                android:id="@+id/enerngy_level_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="2"
                style="?android:attr/ratingBarStyleIndicator"
                />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>